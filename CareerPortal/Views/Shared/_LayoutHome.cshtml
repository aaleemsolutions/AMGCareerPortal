                    <div class="col-auto menu-link order-lg-3">
                        <a href="@Url.Action("RegisterUser","Account",null)" class="login-item @(ViewContext.RouteData.Values["Action"].ToString() == "RegisterUser" ? "active" : "") "><i class="fa  fa-user-plus"></i> Signup</a>
                        <span class="login-item"> / </span>
                        <a href="@Url.Action("Login","Account",null)" class="login-item @(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "active" : "")"> @(Request.IsAuthenticated== true ?"Goto Account":"Login")</a>
                    </div>
                </div>
            </div>
        </header>

        <div id="resmenu" class="resmenu-section">
