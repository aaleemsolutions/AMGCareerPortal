                    </div>
                    <nav id="main-menu" class="main-menu col-lg-auto order-lg-2">
                        <ul>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"><a href="@Url.Action("Index","Home",null)">Home</a></li>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "JobList" ? "active" : "")">

