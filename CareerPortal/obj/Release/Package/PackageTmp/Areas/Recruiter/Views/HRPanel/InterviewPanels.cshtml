@using ViewModels;
@model InterviewPanelViewModel



@{
    //Layout = null;
}
<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background: #fff !important;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <form id="FormInterviewPanels" enctype="multipart/form-data">

            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row " id="NewJobArea">
                            <h3 style="text-decoration:underline"> Add/Edit Panel Employees</h3>
                            <div class="row">
                                @Html.HiddenFor(m => m.InterviewPanels.Id)
                                <div class="col-md-2">
                                    <label>Panel Name <span class="text-danger">*</span></label>
                                    <div id="the-basics1">
                                        @Html.TextBoxFor(Model => Model.InterviewPanels.PanelName,
                                             new { @class = "typeahead", placeholder = "Panel Name" })

                                        @Html.ValidationMessageFor(m => m.InterviewPanels.PanelName, null, new { @class = "text-danger" })
                                        <span class="ErrorPanelName text-danger"></span>

                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <label>Employees<span class="text-danger">*</span></label>
                                    <div id="the-basics1">


                                        @Html.DropDownList("BindPanelPerson", new SelectList(ViewBag.DrpBindPanelPerson, "Value", "Text"), new { @class = " aaDropdownStyle", @Id = "BindPanelPerson", multiple = "multiple" })




                                        <span class="ErrorPanelEmployees text-danger"></span>

                                    </div>
                                </div>




                            </div>


                            <div class="row" style="margin-top: 10px;">
                                <div class="col-md-12 clearfix float-right ">
                                    <button class="btn btn-primary float-right" type="button" style="float: right;" id="btnPanel">Create Panel</button>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>


            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 container-fluid">
                            <div class="table-responsive">
                                <h3 style="text-decoration:underline"> Panel List</h3>
                                <table id="DtInterviewPanel" class="table  text-center">
                                    <thead class="">
                                        <tr>
                                            <th>Panel ID</th>
                                            <th> Panel Name</th>
                                            <th>Employees</th>
                                            <th>Action</th>


                                        </tr>
                                    </thead>



                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>

<div class="loading" id="PostLoaderHRPerson">Loading&#8230;</div>


<script>

    $(document).ready(function () {


        $('#BindPanelPerson').select2({
            closeOnSelect: false,
            placeholder: "Please Select Panel Employees"
        });


        $('#PostLoaderHRPerson').hide();


    });

    </script>



